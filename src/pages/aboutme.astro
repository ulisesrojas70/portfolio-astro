---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="About me">
    <Navbar />
    <section class="py-10">
        <div
            class="flex flex-col-reverse items-center lg:flex-row-reverse justify-between lg:items-start gap-8"
        >
            <!-- Imagen -->
            <div class="flex-shrink-0 w-full lg:w-1/3">
                <img
                    src="/src/assets/programming.svg"
                    alt="About Me"
                    class="w-full h-auto float-effect"
                />
            </div>

            <!-- DescripciÃ³n -->
            <div class="w-full lg:w-1/2">
                <h2 class="text-3xl font-bold mb-4">About Me</h2>
                <p class="text-lg leading-relaxed mb-4">
                    Hi! I'm Ulises, a passionate front-end developer with a love
                    for creating visually stunning and user-friendly web
                    applications. I specialize in JavaScript, React, and
                    responsive design.
                </p>
                <ul class="text-lg mb-4 space-y-2">
                    <li><strong>Location:</strong> Mexico</li>
                    <li>
                        <strong>Experience:</strong> 1 year in web development
                    </li>
                    <li>
                        <strong>Hobbies:</strong> Coding, photography, and exploring
                        new technologies
                    </li>
                </ul>
                <a
                    href="https://avatars.githubusercontent.com/u/101076571?v=4"
                    class="inline-block bg-blue-500 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-600 transition duration-300"
                >
                    Contact Me
                </a>
            </div>
        </div>
    </section>
    <Footer />
</Layout>

<style>
    .float-effect {
        display: inline-block;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
</style>
